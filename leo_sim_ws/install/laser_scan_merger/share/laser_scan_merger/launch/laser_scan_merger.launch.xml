<launch>

  <node name="scans_merger" pkg="laser_scan_merger" exec="scans_merger_node">

    <remap from="/front_scan" to="/depth/scan" />
    <remap from="/rear_scan" to="/scan_main" />
    
    <param name="active"            value="true"/>
    <param name="publish_scan"      value="true"/>
    <param name="publish_pcl2"       value="false"/>

    <param name="ranges_num"        value="1000"/>

    <param name="min_scanner_range" value="0.05"/>
    <param name="max_scanner_range" value="10.0"/>

    <param name="min_x_range"       value="-5.0"/>
    <param name="max_x_range"       value="5.0"/>
    <param name="min_y_range"       value="-5.0"/>
    <param name="max_y_range"       value="5.0"/>

    <param name="fixed_frame_id"   value="map"/>
    <param name="target_frame_id"   value="base_link"/>
  </node>

</launch>
